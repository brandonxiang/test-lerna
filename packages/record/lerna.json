{
  "packages": [
    "packages/*",
    "src/*"
  ],
  "version": "0.0.4",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "src/*"
      ],
      "message": "chore(release): publish"
    }
  }
}
